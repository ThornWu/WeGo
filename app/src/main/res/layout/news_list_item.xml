<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/newsTitle"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_item_title"
            android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/news_item_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textColor="@color/newsSource" />

                <TextView
                    android:id="@+id/news_item_publishtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/news_item_source"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textColor="@color/newsTime"/>

        </RelativeLayout>



</RelativeLayout>